<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/forms.css">
    <title>Document</title>
  </head>
  <body>
    <div class="discover">
      <a href="ask"><button type="submit">Ask!</button></a>
      <% ques.forEach(function(bPost){ %>
      <h3><%= bPost.name %></h3>
      <p><%= bPost.question %></p>
      <p><%= bPost.keywords %></p>
      <a href="/ans/<%= bPost._id %>"><button type="submit">Answer</button></a>
      <hr size="30">
      <% }) %>
    </div>
  </body>
</html>
